{
  "name": "Customer",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Customer name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Customer email"
    },
    "phone": {
      "type": "string",
      "description": "Customer phone number"
    },
    "company": {
      "type": "string",
      "description": "Customer company name"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "potential"
      ],
      "default": "potential",
      "description": "Customer status"
    },
    "acquisition_date": {
      "type": "string",
      "format": "date",
      "description": "Date customer was acquired"
    },
    "total_value": {
      "type": "number",
      "description": "Total customer lifetime value"
    },
    "last_purchase_date": {
      "type": "string",
      "format": "date",
      "description": "Date of last purchase"
    }
  },
  "required": [
    "name",
    "email"
  ]
}